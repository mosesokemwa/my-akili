<div class="navbar-header">
  <button
    type="button"
    class="navbar-toggle"
    data-toggle="collapse"
    data-target=".navbar-collapse"
  >
    <span class="sr-only">Toggle navigation</span>
    {{#each pages}}<span class="icon-bar"></span>{{/each}}
  </button>
  <a
    class="{{#if_active main.page}}active-nav{{/if_active}} navbar-brand"
    href="{{main.href}}">
    {{main.title}}
  </a>
</div>
<div class="collapse navbar-collapse">
  <ul class="nav navbar-nav">
 	{{#each pages}}
    <li {{#if_active page}}class="active"{{/if_active}}>
      <a href="{{href}}">{{title}}</a>
    </li>
	{{/each}}
  </ul>
</div><!--/.nav-collapse -->
